@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer Localizer

@{
    Layout = "_StartLayout";
}


<main class="page-content">
    <!-- Main services-->

    @await Html.PartialAsync("StartPartials/_StartInnerTitlePartial")


    <section class="section-55 border-bottom border-bottom-gray-lighter">
        <div class="shell">
            <div class="range text-center">

                <div class="cell-xs-12 ">
                    <h3>@Localizer["Наши клиенты"]</h3>
                    <!-- Owl Carousel-->
                    <div data-items="1" data-stage-padding="0" data-margin="20" data-sm-stage-padding="0"
                         data-dots="true" class="owl-carousel">
                        <div class="item">
                            <div class="section-bottom-55 section-top-25">
                                <div class="range text-left">

                                    <div class="cell-xs-12 cell-md-6">
                                        <img src="~/static/img/rosgos2.png" class="img-responsive"
                                             alt="">
                                    </div>
                                    <div class="cell-xs-12 cell-md-6 ">
                                        <h4 class="offset-top-25 offset-md-top-0">First investor</h4>
                                        <p class="offset-top-19">
                                            <span class="text-bold">RGS-Life insurance.</span> A life insurance arm of the largest Russian financial groups  collecting annually c. USD 1bn of insurance premiums. RGS Life committed to be the pilot InvoiceCafé pltform investor into SMEs receivables.
                                        </p>
                                        <p class="offset-top-22">
                                            RGS-Bank. A bank from the RGS group is InvoiceCafé payment partner. Platform participants are required to open a designated bank account with RGS bank to trade on the platform.
                                            </p>
                                        <p class="offset-top-22">
                                            Beeper is a leading Russian telecom outsourcing call center business with 16% market share. It serves blue chip Russian corporations like Rostelecom, Vimpelcom, Sberbank, VTB24, Yandex and many others. Beeper is interested to post most of its  recievables ($15m annualy) on sale via InvoiceCafé to dramatically improve its cash flow cycle.
                                            </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="section-bottom-55 section-top-25">
                                <div class="range text-left">

                                    <div class="cell-xs-12 cell-md-6">
                                        <img src="~/static/img/rosgos2.png" class="img-responsive"
                                             alt="">
                                    </div>
                                    <div class="cell-xs-12 cell-md-6 ">
                                        <h4 class="offset-top-25 offset-md-top-0">Payment partner</h4>
                                        <p class="offset-top-19">
                                            <span class="text-bold">RGS-Bank.</span> Bank from the same financial group agreed to be the payment partner of the venture. It will process all payments between sellers, investors and debtors in a course of factoring transactions.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="section-bottom-55 section-top-25">
                                <div class="range text-left">

                                    <div class="cell-xs-12 cell-md-6">
                                        <img src="~/static/img/beeper2.png" class="img-responsive"
                                             alt="">
                                    </div>
                                    <div class="cell-xs-12 cell-md-6 ">
                                        <h4 class="offset-top-25 offset-md-top-0">First seller</h4>
                                        <p class="offset-top-19">
                                            <span class="text-bold">Beeper</span> call-center is a leader of Russian telecom outsourcing industry with 16% market share. It serves such reputable Russian companies as Rostelecom, Vimpelcom, Sberbank, VTB24 and many others. 
                                        </p>
                                        <p class="offset-top-22">
                                            Having account receivables with more than 45 days of average maturity it is very interested in selling its receivables and speeding up its cash cycle.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>






    <section data-on="false" data-lg-on="true" class="rd-parallax bg-gray-darker">
        <div data-speed="0.5" data-type="media" data-url="/static/img/bg-image-2.jpg"
             class="rd-parallax-layer"></div>
        <div data-speed="0" data-type="html" class="rd-parallax-layer">
            <div class="shell text-center text-md-left">
                <div class="range">
                    <div class="cell-xs-12">
                        <div class="section-45 section-sm-top-85 section-sm-bottom-75">
                            <div class="elements-group">
                                <div class="element-wrap">
                                    <h3 class="relative-shift-up-10 noshrink">@Localizer["Пора действовать!"]</h3>
                                    <div class="hr-wrap offset-top-10 offset-sm-top-15 offset-md-top-0">
                                        <hr class="hr-md-vertical hr-white">
                                    </div>
                                    <p class="big">@Localizer["Возьмите под контроль ваши оборотные средства!"]</p>
                                </div>
                                <div class="element-wrap">
                                    <a href="/Start/Register"
                                       class="btn btn-sm btn-curious-blue-variant-1 min-width-160">
                                        @Localizer["Попробовать бесплатно"]
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</main><!-- Brands carousel-->