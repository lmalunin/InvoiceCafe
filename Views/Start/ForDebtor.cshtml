@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer Localizer

@{
    Layout = "_StartLayout";
}


<main class="page-content">
    <!-- Main services-->
    @await Html.PartialAsync("StartPartials/_StartInnerTitlePartial")


    <section class="section-85">
        <div class="shell">
            <div class="range range-sm-center">
                <div class="cell-xs-12 cell-sm-5 cell-lg-3">
                    <div class="product">
                        <div class="icon-decoration-border">
                            <div class="icon-decoration-border-inner">
                                <div class="icon icon-image">
                                    <img src="../../static/img/svg/star.svg" alt=""
