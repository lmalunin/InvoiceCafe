@{
    Layout = "_HomeLayout";
}

@section AngularBootstrap {
    <script>
            document.addEventListener('WebComponentsReady', function () {
                System.import('/app/suppliers/boot.js').catch(function (err) { console.error(err); });
            });
    </script>
}

<ic-application companyName="@ViewBag.CompanyName" companyType="@ViewBag.CompanyType" companyStatus="@ViewBag.CompanyStatus"
                companyId="@ViewBag.CompanyId" registerSteps="@ViewBag.RegisterSteps" _cg="@ViewBag.CompanyGuid" legalForm="@ViewBag.LegalForm" _lang="@ViewBag.CurrentLanguage">

    @await Html.PartialAsync("_HomePreloadPage")

</ic-application>
